<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:id="@+id/cardView"
    app:cardElevation="4dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="2dp"
            android:id="@+id/task_imagen"/>

        <TextView
            android:id="@+id/task_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/task_imagen"
            />
        <TextView
            android:id="@+id/task_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:layout_toEndOf="@id/task_imagen"
            android:layout_below="@id/task_titulo"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:id="@+id/task_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:layout_toEndOf="@id/task_imagen"
            android:layout_below="@id/task_lugar"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:id="@+id/task_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:layout_toEndOf="@id/task_imagen"
            android:layout_below="@id/task_fecha"
            android:layout_marginStart="8dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
